{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "NodeNext", // Explicitly set the 'module' option
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
    // Add any other compiler options you might need here
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}